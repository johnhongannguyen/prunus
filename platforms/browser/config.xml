<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.prunusapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Prunus</name>
    <description>
        Prunus app.
    </description>
    <author email="prunusapp@gmail.com" href="http://phonegap.com">
        Prunus Team
    </author>
    <content src="index.html" />
    <icon src="www/res/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="ShowSplashScreenSpinner" value="false" />
</widget>
